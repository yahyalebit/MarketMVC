@model UI.Models.ViewModel.CartViewModel

@{
    ViewBag.Title = "Sepet";
    Layout = "~/Views/Shared/_LayoutMarket.cshtml";
}
<h2></h2>

<div class="product-list">
    @foreach (var item in Model.CartItems)
    {
        <div class="product-item">
            <img src="@item.Product.Picture" alt="@item.ProductName" class="product-img">
            <div class="product-details">
                <h1>@item.ProductName</h1>
                <h1>Fiyat: @string.Format("{0:C}", item.Price)</h1>
            </div>

            <div class="quantity-control">
                <!-- Miktarı azaltma butonu -->
                <a href="@Url.Action("DecreaseQuantity", "Cart", new { productId = item.ProductId })" class="quantity-btn">-</a>
                <h1>@item.Quantity</h1>
                <!-- Miktarı artırma butonu -->
                <a href="@Url.Action("IncreaseQuantity", "Cart", new { productId = item.ProductId })" class="quantity-btn">+</a>
            </div>

            <!-- Remove butonu ekleniyor -->
            <div class="remove-item">
                <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ProductId })" class="text-danger"><i class="bi bi-trash"></i></a>
            </div>
        </div>
    }

    <div class="total-price">
        <h3>Toplam: @string.Format("{0:C}", Model.TotalPrice)</h3>
    </div>

    <a href="/Cart/Checkout" class="checkout-btn">Siparişi Tamamla</a>
</div>




